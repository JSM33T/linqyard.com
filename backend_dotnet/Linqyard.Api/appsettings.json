{
    "ConnectionStrings": {
        "DefaultConnection": "YOUR_CONN_STRING"
    },
    "JWT": {
        "SecretKey": "Linkyard_Super_Secret_JWT_Key_2025_MinLength32Chars!!",
        "Issuer": "Linqyard.Api",
        "Audience": "Linqyard.Client",
        "ExpiryMinutes": 10,
        "RefreshTokenExpiryDays": 7
    },
    "OAuth": {
        "Google": {
            "ClientId": "YOUR_GOOGLE_CLIENT_ID",
            "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET",
            "RedirectUri": "https://localhost:7000/auth/google/callback"
        },
        "GitHub": {
            "ClientId": "YOUR_GITHUB_CLIENT_ID",
            "ClientSecret": "YOUR_GITHUB_CLIENT_SECRET",
            "RedirectUri": "https://localhost:7000/auth/github/callback"
        }
    },
    "RateLimiting": {
        "LockTimeout": "00:00:00.1000000",
        "DefaultPolicy": {
            "Enabled": false,
            "PermitLimit": 250,
            "Window": "00:01:00",
            "Description": "Fallback policy left disabled."
        },
        "Policies": {
            "auth-login": {
                "PermitLimit": 20,
                "Window": "00:01:00",
                "Description": "Allow finite login attempts per IP"
            },
            "auth-register": {
                "PermitLimit": 5,
                "Window": "00:01:00",
                "Description": "Throttle account creation per IP."
            },
            "auth-verification-resend": {
                "PermitLimit": 5,
                "Window": "00:02:00",
                "Description": "Limit resend frequency per email."
            },
            "auth-forgot-password": {
                "PermitLimit": 5,
                "Window": "00:02:00",
                "Description": "Limit password reset requests per email."
            },
            "profile-avatar-update": {
                "PermitLimit": 10,
                "Window": "00:50:00",
                "Description": "Limit password reset requests per email."
            }
        }
    },
    "PyUrl": "http://localhost:8000",
    "Email": {
        "Smtp": {
            "Host": "smtp.gmail.com",
            "Port": 587,
            "EnableSsl": true,
            "Username": "your-email@gmail.com",
            "Password": "your-app-password",
            "FromEmail": "your-email@gmail.com",
            "FromName": "Linqyard"
        }
    },
    "Cloudinary": {
        "CloudName": "CLOUDNAME",
        "ApiKey": "YOUR_API_KEY",
        "ApiSecret": "YOUR_API_SECRET",
        "Folder": "FOLDER_NAME",
        "CacheDirectory": "cache/media"
    },
    "AzureBlobStorage": {
        "ConnectionString": "YOUR_AZURE_STORAGE_CONNECTION_STRING",
        "ContainerName": "media",
        "CacheDirectory": "cache/media",
        "UseLocalCache": true
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Error",
            "Override": {
                "Microsoft": "Error",
                "System": "Error"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:O} [{Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/f-c-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 14,
                    "fileSizeLimitBytes": 10485760,
                    "rollOnFileSizeLimit": true,
                    "shared": true,
                    "outputTemplate": "{Timestamp:O} [{Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            }
        ]
    },
    "Payments": {
        "Razorpay": {
            "KeyId": "RAZORPAY_KEY_ID",
            "KeySecret": "RAZORPAY_KEY_SECRET",
            "BaseUrl": "https://api.razorpay.com/v1/"
        }
    }
}
